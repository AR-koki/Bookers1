<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
<!-- ---------erarro----------------- -->
	<% if @book.errors.any? %>
		<div id="error_explanation">
		 	<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

		 	<ul>
		 		<% @book.errors.full_messages.each do |message| %>
		 			<li><%= message %></li>
		 		<% end %>
		 	</ul>
		</div>
	 	<div class="title_error">
			<p class="error">Title</p>
			<%= f.text_field :title, class: "error_box" %>
		</div>
		<div class="body_error">
			<p class="error">Body</p>
			<%= f.text_area :body, class: "error_box" %>
		</div>
		<%= f.submit 'Update Book' %>
	<% else %>
	<div class=title>
		<p>Title</p>
		<%= f.text_field :title %>
	</div>
	<div class="body">
		<p>Body</p>
		<%= f.text_area :body %>
	</div>
	<%= f.submit 'Update Book' %>
	<% end %>
<% end %>
<%= link_to "Show", "/books/#{@book.id}" %><span>|</span><%= link_to "Back", "/books" %>